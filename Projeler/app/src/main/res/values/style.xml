<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EntryTittleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">@dimen/entry_title_size</item>
    </style>

    <style name="HomeSubTitleStyle">
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/acme</item>
    </style>

    <style name="StartInputStyle">
        <item name="android:background">@drawable/ic_start_input_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">@dimen/edittext_paddingleft_size</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>

    <style name="PremiumRectangleStyle">
        <item name="android:layout_width">156dp</item>
        <item name="android:layout_height">127dp</item>
        <item name="android:background">@drawable/ic_premium_rectangle</item>
    </style>

    <style name="PremiumTitlePriceStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PremiumSubTitleStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#87869E</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PremiumLightSubTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PremiumRectangleBoxStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="bottom_line">
        <item name="android:layout_width">134dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/ic_bottom_image</item>
    </style>
    <style name="price_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="sub_price_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/gry</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sub_title">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>